<div id="addCardPopUp" data-show-status="0" class="container-fluid">
	<div class="row justify-content-center">

		<div id="addCardPopUp-window" class="col-10 mt-5 p-5">
		<div class="row">
			<div id="addCardPopUp-window-colecction" class="col">
				<h2>Añadir a coleccion</h2>
				<p id="addCardPopUp-window-colecction-name">Nombre de la carta</p>
				
				<label for="colecction-purchacePrice">Precio de compra</label>
				<input type="number" name="colecction-purchacePrice"
				id="addCardPopUp-window-colecction-purchacePrice"
				placeholder="No encontrado">€
				<br>
				
				<label for="colecction-isFoil">Es foil</label>
				<input type="checkbox" name="colecction-isFoil"
				id="addCardPopUp-window-colecction-isFoil">
				<br>

				<label for="colecction-status">Estado</label>
				<select name="colecction-status"
				id="addCardPopUp-window-colecction-status">
				
				</select>
				<br>

				<button>Añadir a coleccion</button>
			</div>

			<div id="addCardPopUp-window-deck" class="col">
				<h2>Añadir a mazo</h2>
				<p id="addCardPopUp-window-deck-name">Nombre de la carta</p>
				
				<select id="addCardPopUp-window-deck-selected">
					<option value="none">Elige un mazo</option>
				</select>
				<br>
				
				<button>Añadir a mazo</button>
			</div>
		</div>
		</div>
	</div>
</div>