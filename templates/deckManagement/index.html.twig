<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

	<title>Tus mazos</title>
	
	{% include "root.html.twig" %}
</head>
{% include "header.html.twig" %}
<body>
	
    <div class="container">
		{% if not is_granted("IS_AUTHENTICATED_FULLY") %}
			<div class="row">
				<div class="col-12 text-center">
					<a href="{{ path('app_login') }}">
					<h1> Inicia sesion para gestionar tus mazos </h1>
					</a>
				</div>
			</div>
		{% else %}

			<div class="row">
				<div class="col-12 text-center">
					<h1> Tus mazos </h1>
					<div class="col-12 text-center">
						<a href="{{ path('deck_create_view') }}" class="btn btn-outline-success {% if app.user.getDecks|length == 0 %}btn-lg{% endif %}">
							Crear nuevo mazo
						</a>
					</div>
				</div>
			</div>
			{% include "separation.twig" %}

			<div class="row justify-content-center" id="deck-list" data-ajax-route="https://api.scryfall.com/cards/">
				{# {{ dump(app.user.getDecks) }} #}

				{% for deck in app.user.getDecks %}
					{# {{ dump(deck) }} #}
					<a href="{{ path('deck_show', { id: deck.getIdDeck }) }}"> {{ deck.getDeckName }} </a>
				{% endfor %}
			</div>
		{% endif %}
    </div>
</body>
</html>
