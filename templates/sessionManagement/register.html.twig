<!DOCTYPE html>
<html lang="en">
<head>
	{% set meta_title = "Registrarse" %}
	{% set meta_description = "Registrate en nuestra web" %}
	
	
	{% include "root.html.twig" %}
	<link rel="stylesheet" href=" {{ asset('styles/form.css') }} ">

</head>
{% include "header.html.twig" %}
<body>

	<div class="container">
		<div class="d-flex justify-content-center align-items-center p-5" style="min-height: 90vh;">
			<form action="{{ path('app_register') }}" method="post" 
			class="row justify-content-center w-100">
				{% if responseData is defined %}
					<p class="text-center alert alert-danger">
						{{ responseData.message }}
					</p>
				{% endif %}
				<table class="col-12 col-md-8 pop-up-bordered w-100">
					<tr>
						<td class="col-6 col-md-4 p-2">Usuario</td>
						<td class="col-6 col-md-4 p-2"><input type="text" id="username" name="_username" class="form-control" /></td>
					</tr>
					<tr>
						<td class="p-2">Correo</td>
						<td class="p-2"><input type="email" id="email" name="_email" class="form-control" /></td>
					</tr>
					<tr>
						<td class="p-2">Contrase√±a</td>
						<td class="p-2"><input type="password" id="password" name="_password" class="form-control" /></td>
					</tr>
					<tr>
						<td colspan="2" class="text-center p-2"><button type="submit" class="btn btn-primary">Registrarse</button></td>
					</tr>
					<tr>
						<td class="pb-2 text-center"> 
							<a class="btn btn-outline-primary" href="{{ path('app_login_view') }}">Iniciar sesion</a>
						</td>
						{#<!--<td> <a href="{{ path('load_recovery') }}">Recover Password</a> </td> -->#}
					</tr>
				</table>
			</form>
		</div>
	</div>
</body>
</html>
